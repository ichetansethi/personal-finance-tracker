# Database
DB_URL=jdbc:postgresql://localhost:5432/finance_tracker
DB_USERNAME=postgres
DB_PASSWORD=your_db_password_here

# JPA (use 'update' for dev, 'validate' for production)
JPA_DDL_AUTO=update

# JWT Secret (generate a strong random string, minimum 256 bits)
JWT_SECRET=your-secure-random-secret-here

# Email (Gmail example - use App Password, not account password)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here
MAIL_FROM=your-email@gmail.com

# CORS (comma-separated allowed origins)
CORS_ALLOWED_ORIGINS=https://yourfinanceguy.netlify.app,http://localhost:3000,http://localhost:5500,http://127.0.0.1:5500
